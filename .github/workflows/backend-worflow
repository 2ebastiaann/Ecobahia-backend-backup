name: üöÄ Deploy Backend ecoBahia

on:
  push:
    branches:
      - main
    paths:
      - 'backend/**' # Solo se ejecuta si hay cambios en el backend

jobs:
  deploy-backend:
    runs-on: ubuntu-latest

    steps:
      # ----------------- CHECKOUT -----------------
      - name: üß© Checkout c√≥digo
        uses: actions/checkout@v4

      # ----------------- NODE -----------------
      - name: ‚öô Configurar Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20

      # ----------------- DEPENDENCIAS Y BUILD -----------------
      - name: üì¶ Instalar dependencias backend
        run: |
          cd backend
          npm install

      # Si usas TypeScript o necesitas un paso de compilaci√≥n (babel/tsc)
      # Si es JS puro, puedes saltar este paso o dejarlo como validaci√≥n
      - name: üèó Compilar Backend (Build)
        run: |
          cd backend
          npm run build --if-present 

      # ----------------- PREPARAR ARCHIVOS -----------------
      - name: üß© Preparar deploy backend
        run: |
          rm -rf deploy-backend
          mkdir deploy-backend
          
          # Copiamos el package.json y package-lock.json (CRUCIAL para backend)
          cp backend/package*.json deploy-backend/
          
          # Si tienes build (dist), copia la carpeta dist. 
          # Si es JS puro sin build, copia la carpeta 'src' o los archivos .js
          # Ajusta esta l√≠nea seg√∫n tu estructura:
          cp -r backend/dist deploy-backend/ || cp -r backend/src deploy-backend/
          
          # Copiar archivo .env de ejemplo si es necesario (nunca el real)
          # cp backend/.env.example deploy-backend/

      - name: üßæ Ver contenido a subir
        run: ls -R deploy-backend

      # ----------------- LIMPIAR SERVIDOR -----------------
      # Nota: En backend a veces preferimos NO borrar node_modules para ahorrar tiempo
      # Pero mantengo tu l√≥gica de "limpieza total" aqu√≠.
      - name: üßπ Limpiar carpeta backend en servidor
        uses: appleboy/ssh-action@v1
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SERVER_SSH_KEY }}
          port: ${{ secrets.SERVER_PORT || '22' }}
          script: |
            # Borramos c√≥digo viejo pero intentamos preservar node_modules si quieres velocidad
            # Aqu√≠ borramos todo para seguir tu estilo clean:
            rm -rf /var/www/jorge_api/*
            mkdir -p /var/www/jorge_api
            echo "‚úî Carpeta del servidor backend limpia"

      # ----------------- SUBIR ARCHIVOS -----------------
      - name: üì§ Subir backend ecoBahia al servidor
        uses: appleboy/scp-action@v0.1.7
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SERVER_SSH_KEY }}
          port: ${{ secrets.SERVER_PORT || '22' }}
          source: "deploy-backend/*"
          target: "/var/www/jorge_api/"
          strip_components: 1
          overwrite: true

      # ----------------- INSTALAR Y REINICIAR -----------------
      - name: ‚öô Configuraci√≥n final y Reinicio (PM2)
        uses: appleboy/ssh-action@v1
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SERVER_SSH_KEY }}
          port: ${{ secrets.SERVER_PORT || '22' }}
          script: |
            cd /var/www/jorge_api
            
            # 1. Instalar dependencias de producci√≥n en el servidor
            echo "üì¶ Instalando dependencias en servidor..."
            npm install --production

            # 2. Permisos (opcional pero recomendado)
            chmod -R 755 /var/www/jorge_api

            # 3. Reiniciar el proceso con PM2
            # Asumiendo que usas PM2 para mantener el backend vivo
            echo "üîÑ Reiniciando servicio..."
            pm2 restart eco-backend || pm2 start dist/index.js --name "eco-backend"
            
            echo "‚úî Deploy Backend completado correctamente"
