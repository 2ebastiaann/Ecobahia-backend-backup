name: ðŸš€ Deploy Backend ecoBahia

on:
  push:
    branches:
      - main

jobs:
  deploy-backend:
    runs-on: ubuntu-latest

    steps:
      # ----------------- CHECKOUT -----------------
      - name: ðŸ§© Checkout cÃ³digo
        uses: actions/checkout@v4

      # ----------------- NODE -----------------
      - name: âš™ Configurar Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20

      # ----------------- DEPENDENCIAS Y BUILD -----------------
      - name: ðŸ“¦ Instalar dependencias backend
        run: |
          cd Back-End-ecobahia
          npm install

      - name: ðŸ— Compilar Backend (Build)
        run: |
          cd Back-End-ecobahia
          npm run build --if-present 

      # ----------------- PREPARAR ARCHIVOS -----------------
      - name: ðŸ§© Preparar deploy backend
        run: |
          rm -rf deploy-backend
          mkdir deploy-backend
          
          # Copiamos package.json desde la carpeta correcta
          cp Back-End-ecobahia/package*.json deploy-backend/
          
          # âš ï¸ Ajuste importante: Copiar la carpeta compilada o el cÃ³digo fuente
          # Si usas TypeScript y compilas a 'dist':
          cp -r Back-End-ecobahia/dist deploy-backend/ || cp -r Back-End-ecobahia/src deploy-backend/
          
          # Si tienes archivos raÃ­z necesarios (como index.js o app.js en la raÃ­z del backend), agrÃ©galos:
          # cp Back-End-ecobahia/index.js deploy-backend/ 2>/dev/null || :

      - name: ðŸ§¾ Ver contenido a subir
        run: ls -R deploy-backend

      # ----------------- LIMPIAR SERVIDOR -----------------
      - name: ðŸ§¹ Limpiar carpeta backend en servidor
        uses: appleboy/ssh-action@v1
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SERVER_SSH_KEY }}
          port: ${{ secrets.SERVER_PORT || '22' }}
          script: |
            # Borra la versiÃ³n anterior
            rm -rf /var/www/jorge_api/*
            mkdir -p /var/www/jorge_api
            echo "âœ” Carpeta del servidor backend limpia"

      # ----------------- SUBIR ARCHIVOS -----------------
      - name: ðŸ“¤ Subir backend ecoBahia al servidor
        uses: appleboy/scp-action@v0.1.7
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SERVER_SSH_KEY }}
          port: ${{ secrets.SERVER_PORT || '22' }}
          source: "deploy-backend/*"
          target: "/var/www/jorge_api/"
          strip_components: 1
          overwrite: true

      # ----------------- INSTALAR Y REINICIAR -----------------
      - name: âš™ ConfiguraciÃ³n final y Reinicio (PM2)
        uses: appleboy/ssh-action@v1
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SERVER_SSH_KEY }}
          port: ${{ secrets.SERVER_PORT || '22' }}
          script: |
            cd /var/www/jorge_api
            
            echo "ðŸ“¦ Instalando dependencias en servidor..."
            npm install --production

            # Permisos
            chmod -R 755 /var/www/jorge_api

            # Reinicio con PM2
            echo "ðŸ”„ Reiniciando servicio..."
            # AsegÃºrate que el archivo de entrada coincida (ej. dist/index.js, src/index.js, o index.js)
            pm2 restart eco-backend || pm2 start dist/index.js --name "eco-backend"
            
            echo "âœ” Deploy Backend completado correctamente"
